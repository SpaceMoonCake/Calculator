<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/lavenders">

    <TextView
        android:id="@+id/calculation_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="30sp"
        android:text=""/>

    <TextView
        android:id="@+id/resultCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="50sp"
        android:text=""
        android:textColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <Button
            android:id="@+id/button_number_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/button_number_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_number_four"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_two"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/button_number_three"
            app:layout_constraintStart_toEndOf="@+id/button_number_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_number_five"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="3"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/button_number_six"
            app:layout_constraintStart_toEndOf="@+id/button_number_two"
            app:layout_constraintEnd_toStartOf="@id/button_sign_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:id="@+id/button_sign_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="C"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/button_sign_minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/button_number_three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_four"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_number_five"
            app:layout_constraintTop_toBottomOf="@+id/button_number_one"
            app:layout_constraintBottom_toTopOf="@id/button_number_seven"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_five"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_number_four"
            app:layout_constraintEnd_toStartOf="@+id/button_number_six"
            app:layout_constraintTop_toBottomOf="@+id/button_number_two"
            app:layout_constraintBottom_toTopOf="@id/button_number_eight"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_six"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="6"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="148dp"
            app:layout_constraintStart_toEndOf="@+id/button_number_five"
            app:layout_constraintEnd_toStartOf="@+id/button_sign_minus"
            app:layout_constraintTop_toBottomOf="@+id/button_number_three"
            app:layout_constraintBottom_toTopOf="@id/button_number_nine"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_sign_minus"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="-"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/button_number_six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_sign_delete"
            app:layout_constraintBottom_toTopOf="@id/button_sign_plus"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="7"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/button_number_null"
            app:layout_constraintEnd_toStartOf="@+id/button_number_eight"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_number_four"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/button_number_eight"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#8000"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/button_number_seven"
            app:layout_constraintEnd_toStartOf="@+id/button_number_nine"
            app:layout_constraintTop_toBottomOf="@+id/button_number_five"
            app:layout_constraintBottom_toTopOf="@id/button_sign_multiply"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_nine"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_number_eight"
            app:layout_constraintEnd_toStartOf="@+id/button_sign_plus"
            app:layout_constraintTop_toBottomOf="@+id/button_number_six"
            app:layout_constraintBottom_toTopOf="@id/button_sign_division"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>


        <Button
            android:id="@+id/button_sign_plus"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_number_nine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_sign_minus"
            app:layout_constraintBottom_toTopOf="@id/button_sign_equally"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_number_null"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_sign_multiply"
            app:layout_constraintTop_toBottomOf="@+id/button_number_seven"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_sign_multiply"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_number_null"
            app:layout_constraintEnd_toStartOf="@id/button_sign_division"
            app:layout_constraintTop_toBottomOf="@+id/button_number_eight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_sign_division"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_sign_multiply"
            app:layout_constraintEnd_toStartOf="@id/button_sign_equally"
            app:layout_constraintTop_toBottomOf="@+id/button_number_nine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/button_sign_equally"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@+id/button_sign_division"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_sign_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>